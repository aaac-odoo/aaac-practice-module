<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- form view for getting input -->
        <record id="company_form_view" model="ir.ui.view">
            <field name="name">Companies</field>
            <field name="model">listed.company</field>
            <field name="arch" type="xml">
                <form string="Companies">
                    <sheet>
                        <div>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="ticker_name"/>  
                                <field name="current_price"/>
                            </group>
                            <group>
                                <field name="available_shares"/>
                                <!-- <sheet>
                                    
                                    <graph string="Price Analysis" type="line" sample="1">
                                         <field name="year"/>
                                         <field name="price" type="measure"/>
                                     </graph>
                                 </field>
                                </sheet> -->
                                
                            </group>
                            
                            <div class="oe_chart">
                                <field name="price_ids" type="line"
                                attrs="{'model': 'stock_prices' }"/>
                            </div>

                        </group>

                        <notebook>
                            <page string="Orders">
                                <field name="order_ids">
                                    <tree>
                                        <field name="user"/>
                                        <field name="order_type"/>
                                        <field name="number_of_shares"/>
                                        <field name="price_at_execution"/>
                                        <field name="total_amount"/>
                                    </tree>
                                </field>  
                            </page>
                        </notebook>
                    </sheet>
                    <!-- <field name="price_ids" widget="dashboard_graph" graph_type="line"/> -->

                </form>
            </field>
        </record>

        <record id="listed_company_action" model="ir.actions.act_window">
            <field name="name">Companies</field>
            <field name="res_model">listed.company</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new company
              </p>
            </field>
        </record>

    </data>
</odoo>