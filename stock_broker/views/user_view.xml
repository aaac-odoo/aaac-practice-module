<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- treee view -->
         <record id="estate_property_treeView" model="ir.ui.view">
         <field name="name">Users</field>
         <field name="model">users</field>
             <field name="arch" type="xml">
                 <tree string="userDetails">
                    <field name="name"/>
                    <field name="initial_balance"/>
                    <field name="current_balance"/>    
                    <field name="profit"/>              
                 </tree>
             </field>
        </record>
        
        <!-- form view for getting input -->
        <record id="estate_property_view_form" model="ir.ui.view">
            <field name="name">User</field>
            <field name="model">users</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <div>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="initial_balance"/>
                            <field name="current_balance"/>
                        </group>
                        <group>
                            
                        </group>
                        <notebook>
                            <page string="Orders">
                                <field name="order_ids">
                                    <tree>
                                        <field name="company_name"/>
                                        <field name="order_type"/>
                                        <field name="number_of_shares"/>
                                        <field name="price_at_execution"/>
                                        <field name="total_amount"/>
                                    </tree>                                    
                                </field>  
                            </page>
                            <page string="Watchlist">
                                <field name="watchlist_ids">
                                    
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="users_fetch_action" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">users</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new user
              </p>
            </field>
        </record>

    </data>
</odoo>